<Window x:Class="Notes.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Notes.View" 
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="700" Closed="SaveToFile">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <ListBox Margin="10,40,0,10" Grid.Column="0" ItemsSource="{Binding Notes}" SelectedItem="{Binding SelectedNote}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Name }"></TextBlock>
                        <TextBlock Text=" "></TextBlock>
                        <TextBlock Text="{Binding CreationDate}"></TextBlock>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Grid Grid.Column="1" Grid.ColumnSpan="2" DataContext="{Binding SelectedNote}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <TextBox FontSize="18" Grid.Row="0" Margin="10,10,10,500" Text="{Binding Name}"></TextBox>
            <TextBlock Grid.Row="0" Margin="10,45,300,465" Text="{Binding CreationDate}"></TextBlock>
            <TextBox Grid.Row="0" Margin="10,75,10,10" Text="{Binding Note}"></TextBox>
        </Grid>
        
        <Button Margin="10,480,150,10" Command="{Binding AddCommand}"></Button>
        <Button Grid.Column="2" Margin="150,480,10,10" Command="{Binding RemoveCommand}"></Button>
        <Button Grid.Column="0" Margin="190,520,10,10" Click="AlphabetSortButtonClick" ></Button>
        <Button Grid.Column="0" Margin="145,520,55,10" Click="DateSortButtonClick" ></Button>

        <TextBox Margin="10,10,0,530" FontSize="15"></TextBox>
    </Grid>
</Window>
